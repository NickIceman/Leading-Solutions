extends ../layout

block content
  ul.nav.nav-tabs
    li.nav-item
      a.nav-link.active(data-toggle='tab', href='#home') Игровые достижения
    li.nav-item
      a.nav-link(data-toggle='tab', href='#menu1') Настройки профиля
  // Tab panes
  .tab-content
    #home.tab-pane.container.active
      img.achievements(src='/images/achievements.png')

    #menu1.tab-pane.container.fade
      p
      p
        form(action='/account/profile', method='POST')
          input(type='hidden', name='_csrf', value=_csrf)
          .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='email') Почта
            .col-md-7
              input.form-control(type='email', name='email', id='email', value=user.email, autocomplete='email')
          .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='name') Имя
            .col-md-7
              input.form-control(type='text', name='name', id='name', value=user.profile.name, autocomplete='name')
          .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right Пол
            .col-sm-6
              .form-check.form-check-inline
                input(type='radio', class='form-check-input' checked=user.profile.gender == 'male', name='gender', value='male', data-toggle='radio')
                label.form-check-label Мужчина

              .form-check.form-check-inline
                input(type='radio', class='form-check-input' checked=user.profile.gender == 'female', name='gender', value='female', data-toggle='radio')
                label.form-check-label Женщина

              //.form-check.form-check-inline
                input(type='radio', class='form-check-input' checked=user.profile.gender == 'other', name='gender', value='other', data-toggle='radio')
                label.form-check-label Другое
          .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='location') Город
            .col-md-7
              input.form-control(type='text', name='location', id='location', value=user.profile.location, autocomplete)
          //.form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='website') Сайт
            .col-md-7
              input.form-control(type='text', name='website', id='website', value=user.profile.website, autocomplete='url')
          //.form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right Граватар
            .col-sm-4
              img(src=user.gravatar(), class='profile', width='100', height='100')
          .form-group
            .offset-sm-3.col-md-7.pl-2
              button.btn.btn.btn-primary(type='submit')
                i.fas.fa-pencil-alt.fa-sm
                | Обновить профиль

        .pb-2.mt-2.mb-4.border-bottom
          h3 Поменять пароль

        form(action='/account/password', method='POST')
          input(type='hidden', name='_csrf', value=_csrf)
          .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='password') Новый пароль
            .col-md-7
              input.form-control(type='password', name='password', id='password', autocomplete='new-password')
          .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='confirmPassword') Подтвердить пароль
            .col-md-7
              input.form-control(type='password', name='confirmPassword', id='confirmPassword', autocomplete='new-password')
          .form-group
            .offset-sm-3.col-md-7.pl-2
              button.btn.btn-primary(type='submit')
                i.fas.fa-lock.fa-sm
                | Поменять пароль

        .pb-2.mt-2.mb-4.border-bottom
          h3 Удалить аккаунт

        form(action='/account/delete', method='POST', onsubmit="return confirm('Уверены, что хотите удалить профиль?');")
          .form-group
            p.offset-sm-3.col-md-7.pl-2 Удаление профиля необратимо.
            input(type='hidden', name='_csrf', value=_csrf)
            .offset-sm-3.col-md-7.pl-2
              button.btn.btn-danger(type='submit')
                i.fas.fa-trash-alt.fa-sm
                | Удалить аккаунт

