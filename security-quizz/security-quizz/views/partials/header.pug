.navbar.navbar-light.fixed-top.navbar-expand-lg
  .container
    a.navbar-brand(href='/')
      //i.fas.fa-cube
      i
      | Киберананас
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='.navbar-collapse')
      span.sr-only Toggle navigation
      span.navbar-toggler-icon
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        //li.nav-item(class=(title === 'Home') ? 'active' : undefined)
          a.nav-link(href='/') Home
        if user
          li.nav-item(class=(title === 'Lessons') ? 'active' : undefined)
            a.nav-link(href='/lessons') Уроки
        li.nav-item(class=(title === 'Store') ? 'active' : undefined)
          a.nav-link(href='/store') Магазин
        li.nav-item(class=(title === 'Project') ? 'active' : undefined)
          a.nav-link(href='/project') О проекте
        li.nav-item(class=(title === 'Rating') ? 'active' : undefined)
          a.nav-link(href='/rating') Рейтинг
        li.nav-item(class=(title === 'Contact') ? 'active' : undefined)
          a.nav-link(href='/contact') О нас

        //li.nav-item(class=(title === 'Status') ? 'active' : undefined)
          a.nav-link(href='/status') Status
      ul.nav.navbar-nav.ml-auto
        if !user
          li.nav-item(class=(title === 'Login') ? 'active' : undefined)
            a.nav-link(href='/login') Войти
          li.nav-item(class=(title === 'Create Account') ? 'active' : undefined)
            a.nav-link(href='/signup') Регистрация
        else
          li.dropdown(class=(title === 'Account Management') ? 'active' : undefined).nav-item
            a.dropdown-toggle.nav-link(href='/account', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
              else
                img(src=user.gravatar(60))
              span= user.profile.name || user.email || user.id
              i.caret
            ul.dropdown-menu
              li.dropdown-item
                a(href='/account') Мой профиль
              li.divider.dropdown-item
              li.dropdown-item
                a(href='/logout') Выйти
